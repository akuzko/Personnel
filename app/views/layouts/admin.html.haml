!!!
%html
  %head
    %title Zone3000 Staff Administration
    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/default/style", "web-app-theme/override", "web-app-theme/jquery-ui-1.8.15.custom", "web-app-theme/jquery.Jcrop", :cache => true
    = javascript_include_tag :defaults, 'jscolor', 'jquery-ui-1.8.15.custom.min', 'jquery-ui-timepicker-addon', 'jquery.Jcrop.min', :cache => true
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Zone3000 Staff Administration
        #user-navigation
          %ul.wat-cf
            %li
              %strong= Admin.find(current_admin.id).email unless current_admin.nil?
            %li= link_to t("web-app-theme.settings", :default => "Settings"), settings_edit_admin_admins_path
            %li= link_to t("web-app-theme.logout", :default => "Logout"), destroy_admin_session_path, :class => 'logout'
        #main-navigation
          %ul.wat-cf.dropdown
            %li{:class => controller.controller_path == 'admin/admins' ? 'active' : '' }
              %a{:href => admin_admins_path} Admins
            %li{:class => controller.controller_path == 'admin/departments' ? 'active' : '' }
              %a{:href => admin_departments_path} Departments
            %li{:class => controller.controller_path == 'admin/categories' ? 'active' : '' }
              %a{:href => admin_categories_path} Categories
            %li{:class => (controller.controller_path == 'admin/users'  && controller.action_name != 'working_hours') ? 'active' : '' }
              %a{:href => admin_users_path} Users
            %li{:class => controller.controller_path == 'admin/schedule_statuses' ? 'active' : '' }
              %a{:href => admin_schedule_statuses_path} Schedule Statuses
            %li{:class => controller.controller_path == 'admin/schedules' ? 'active' : '' }
              %a{:href => admin_schedule_path} Schedule
            %li{:class => controller.controller_path == 'admin/shifts' ? 'active' : '' }
              %a{:href => admin_shifts_path} Shifts
            %li{:class => (controller.controller_path == 'admin/events' && controller.action_name == 'index') ? 'active' : '' }
              %a{:href => admin_events_path} Events
            %li{:class => controller.controller_path == 'admin/permissions' ? 'active' : '' }
              %a{:href => admin_permissions_path} Check List
            %li{:class => ((controller.controller_path == 'admin/events' && controller.action_name != 'index') || (controller.controller_path == 'admin/late_comings') || (controller.action_name == 'working_hours')) ? 'active' : '' }
              %a{:href => '#'} Reports
              %ul
                %li
                  %a{:href => processed_by_person_admin_events_path} Processed: By Person
                %li
                  %a{:href => admin_late_comings_path} Late Comings
                %li
                  %a{:href => working_hours_admin_users_path} Working hours
                %li
                  %a{:href => processed_by_day_of_week_admin_events_path} Processed: By Days Of Week
            %li{:class => controller.controller_path == 'admin/logs' ? 'active' : '' }
              %a{:href => admin_logs_path} Logs
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Zone3000 Staff Administration.
        #sidebar
          = yield :sidebar
  :javascript
    app.init()