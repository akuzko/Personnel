!!!
%html
  %head
    %title Personnel
    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/default/style", "web-app-theme/override", "web-app-theme/jquery-ui-1.8.15.custom", :cache => true
    = javascript_include_tag :defaults, 'jscolor', 'jquery-ui-1.8.15.custom.min', :cache => true
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Personnel
        #main-navigation
          %ul.wat-cf
            %li{:class => (params[:controller] == "home" ? "first active" : "first")}= link_to "Home", root_path
            %li= link_to t("personnel.Admin Area", :default => "Admin Area"), admin_root_path
            %li= link_to t("personnel.User Area", :default => "User Area"), user_path
            %li= link_to t("personnel.Applicant", :default => "Applicant"), '#'
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Personnel.
        #sidebar
          = yield :sidebar
  :javascript
    app.init()
