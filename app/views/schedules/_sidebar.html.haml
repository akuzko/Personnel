.block.notice
  = render 'shared/template_users_show', :layout => false, :template => @template, :users => @users, :admin => false
  %div{:style => 'clear:both;'}
  %br
  %table{:width =>160, :cellpadding => 1, :cellspacing => 1, :style => 'background-color:#bbbbbb;text-align:center'}
    %tr
      %th
        = t("personnel.schedule.legend", :default => "Legend")
      %th
        = t("personnel.schedule.color", :default => "Color")
      %th.last &nbsp;
    - @statuses.each do |status|
      %tr{:class => cycle("odd", "even")}
        %td{:style => 'background-color:#ffffff;width:100%'}
          = status.name
        %td{:style => "background-color:##{status.color};width:100%"}
          &nbsp;
.block.notice
  %h3 Tips
  .content
    %p
      If you would like to
      %b exclude
      yourself from the delivery list, left click on the corresponding cell. Your number will become strikethrough. To
      %b undo
      left click on the cell again.
    %p
      The changes should be made before 12 pm for the current day.
    %div{:style => "clear:both"}
.block