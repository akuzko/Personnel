.block
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Login Information
    .inner
      = render "shared/form_errors", :object => @user
      = form_for @user, :url=> user_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')