.block
  .content
    %h2.title
      = t("web-app-theme.find", :default => "Find")
      Users
    .inner
      = form_for :search, :url => find_user_path, :html => {:method => :get, :class => 'form'} do |f|
        .group
          = f.label :identifier, t("activerecord.attributes.contact.identifier", :default => "By ID"), :class => :label
          = f.text_field :identifier, :class => 'text_field'
        .group
          = f.label :full_name, t("activerecord.attributes.contact.full_name", :default => "Full Name"), :class => :label
          = f.text_field :full_name, :class => 'text_field'
        .group
          = f.label :department_id, t("activerecord.attributes.user.department_id", :default => "Department"), :class => :label
          = f.select :department_id, Department.selection
        .group.navform.wat-cf
          %button.button{:type => "submit"}
            = image_tag("web-app-theme/icons/find.png", :alt => "#{t("web-app-theme.find", :default => "Find")}")
            = t("web-app-theme.find", :default => "Find")
      %table.table
        %tr
          %th= t("activerecord.attributes.user.identifier", :default => t("activerecord.labels.identifier", :default => "IDentifier"))
          %th= t("activerecord.attributes.user.full_name", :default => t("activerecord.labels.full_name", :default => "Full Name"))
          %th= t("activerecord.attributes.contact.cell1", :default => t("activerecord.labels.cell1", :default => "Cell 1"))
          %th= t("activerecord.attributes.contact.cell2", :default => t("activerecord.labels.cell2", :default => "Cell 2"))
          %th= t("activerecord.attributes.contact.cell3", :default => t("activerecord.labels.cell3", :default => "Cell 3"))
          %th= t("activerecord.attributes.contact.home_phone", :default => t("activerecord.labels.home_phone", :default => "Home Phone"))
          %th= t("activerecord.attributes.user.department_id", :default => t("activerecord.labels.department", :default => "Department"))
          %th= t("activerecord.attributes.profile.birthdate", :default => t("activerecord.labels.birthdate", :default => "BirthDate"))
        - @users.each do |user|
          %tr{:class => cycle("odd", "even")}
            %td= user.identifier
            %td= user.full_name
            %td= user.cell1
            %td= user.cell2
            %td= user.cell3
            %td= user.home_phone
            %td= user.department_name if user.department_id
            %td= l(user.birthdate) if user.birthdate
      .actions-bar.wat-cf
        .actions
        = will_paginate @users
- content_for :sidebar, render(:partial => 'sidebar')
