%p
  %b
    = t("personnel.profile.last_name", :default => "Last Name")
    \:
  = @user.profile.last_name
%p
  %b
    = t("personnel.profile.first_name", :default => "First Name")
    \:
  = @user.profile.first_name
%p
  %b
    = t("personnel.profile.birthdate", :default => "Birthdate")
    \:
  = @user.profile.birthdate.strftime("%Y-%b-%d") unless @user.profile.birthdate.nil?
- if @user.profile.has_t_shirt? && current_admin
  %p
    %b
      = t("personnel.profile.t_shirt_size", :default => "T-Shirt Size")
      \:
    = @user.profile.t_shirt_size
- if @user.profile.has_levels?
  %p
    %b
      = t("personnel.profile.level", :default => "Level")
      \:
    = @user.profile.level
- if @user.active
  %p
    %b
      - if @user.hired_at
        =distance_of_time_in_words_to_now(@user.hired_at)
      - else
        no one knows how long
    with the company