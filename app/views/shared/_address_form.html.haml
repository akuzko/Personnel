.group
  = f.label :street, t("personnel.address.street", :default => "Street"), :class => :label
  = f.text_field :street, :class => 'text_field'
  %span.description
    = t("personnel.Required")
    ,
    = t("personnel.Fill in Russian")
.group
  = f.label :build, t("personnel.address.build", :default => "Building #"), :class => :label
  = f.text_field :build, :class => 'text_field'
  %span.description= t("personnel.Required")
.group
  = f.label :porch, t("personnel.address.porch", :default => "Porch"), :class => :label
  = f.text_field :porch, :class => 'text_field'
  %span.description= t("personnel.Required")
.group
  = f.label :nos, t("personnel.address.nos", :default => "Number of storeys"), :class => :label
  = f.text_field :nos, :class => 'text_field'
