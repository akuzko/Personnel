%table{:width =>200, :cellpadding => 5, :cellspacing => 1, :style => 'background-color:#bbbbbb;text-align:center'}
  %tr
    %th.first ID
    %th Name
    - if @admin
      %th S
      %th N
      %th W
  - @users.each do |user|
    %tr{:id => user.identifier, :class => 'user_select'}
      %td{:style => 'background-color:#ffffff'}= user.identifier
      %td{:style => 'background-color:#ffffff;text-align:left;padding-left:5px'}= user.full_name
      - if @admin
        %td{:style => 'background-color:#ffffff'}= user.work_shifts_count @template.id
        %td{:style => 'background-color:#ffffff'}= user.work_nights_count @template.id
        %td{:style => 'background-color:#ffffff'}= user.day_off_count @template.id