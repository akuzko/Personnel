%p
  %b
    = t("personnel.contact.email", :default => "Personal Email")
    \:
  = @user.contact.email
%p
  %b
    = t("personnel.contact.cell1", :default => "Cell 1")
    \:
  = @user.contact.cell1
%p
  %b
    = t("personnel.contact.cell2", :default => "Cell 2")
    \:
  = @user.contact.cell2
%p
  %b
    = t("personnel.contact.cell3", :default => "Cell 3")
    \:
  = @user.contact.cell3
- if current_user.nil? || current_user.id == @user.id
  %p
    %b
      = t("personnel.contact.home_phone", :default => "Home Phone")
      \:
    = @user.contact.home_phone == '0' ? 'n/a' : @user.contact.home_phone