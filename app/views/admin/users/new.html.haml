.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_users_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_user_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      User
    .inner
      = form_for :user, :url => admin_users_path, :html => { :class => :form } do |f|
        .group
          = f.label :email, t("activerecord.attributes.user.email", :default => "Email"), :class => :label
          = f.text_field :email, :class => 'text_field'
          %span.description= t("personnel.Z3K email address")
        .group
          = f.label :department_id, t("activerecord.attributes.user.department_id", :default => "Department"), :class => :label
          = f.select :department_id, Department.selection, {}, :class => 'text_field'
        .group
          = f.label :password, t("activerecord.attributes.user.password", :default => "Password"), :class => :label
          = f.text_field :password, :class => 'text_field'
          %span.description= t("personnel.Password")
        .group.navform.wat-cf
          %button.button{:type => "submit"}
            = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
            = t("web-app-theme.save", :default => "Save")
          %span.text_button_padding= t("web-app-theme.or", :default => "or")
          = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_users_path, :class => "text_button_padding link_button"

- content_for :sidebar, render(:partial => 'sidebar')
