.group
  = f.label :active, t("activerecord.attributes.user.active", :default => "Active"), :class => :label
  = f.check_box :active, :class => 'check_box'
.group
  = f.label :department_id, t("activerecord.attributes.user.department_id", :default => "Department"), :class => :label
  = f.select :department_id, Department.selection_by_admin(current_admin.id)
.group
  = f.label :identifier, t("activerecord.attributes.user.identifier", :default => "IDentifier"), :class => :label
  = f.text_field :identifier, :class => 'text_field', :style => "width:80px"
  = f.hidden_field :back_url, :value => @back_url
.group
  = f.label :hired_at, t("activerecord.attributes.user.hired", :default => "hired"), :class => :label
  = f.text_field :hired_at, :class => 'text_field date_select', :style => "width:160px"
.group
  = f.label :fired_at, t("activerecord.attributes.user.fired", :default => "fired"), :class => :label
  = f.check_box :fired, :class => 'check_box'
  = f.text_field :fired_at, :class => 'text_field date_select', :style => "width:160px"
= render 'shared/user_form', :f => f

.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}") + t("web-app-theme.cancel", :default => "Cancel"), @back_url, :class => "button"
