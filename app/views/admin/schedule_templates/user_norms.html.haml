%div{:class => "flash", :style => 'display:none;'}
  %div{:id => "norms_flash", :class => "message error"}

= form_for [:admin, @norms], :url => update_user_norms_admin_schedule_template_path(@template), :method => 'post', :remote => true, :html => {:class => 'form', 'data-type' => 'script'} do |f|

  = f.hidden_field :user_id

  .group
    = f.label :workdays, t("activerecord.attributes.schedule_templates.workdays", :default => "Workdays"), :class => :label
    = f.text_field :workdays, :class => 'text_field'

  .group
    = f.label :weekend, t("activerecord.attributes.schedule_templates.weekend", :default => "Weekend"), :class => :label
    = f.text_field :weekend, :class => 'text_field'

  .group.navform.wat-cf

    %button.button{:type => "submit"}
      = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Submit")}")
      = t("web-app-theme.save", :default => "Save")

    %a.button.close{:href => '#'}
      = image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")
      = t("web-app-theme.cancel", :default => "Cancel")