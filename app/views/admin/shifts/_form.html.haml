%div{:class => "flash", :style => 'display:none;'}
  %div{:id => "shift_flash", :class => "message error"}
= form_for [:admin, @shift], :remote => true, :html => {:class => 'form', 'data-type' => 'script'} do |f|
  .group
    = f.label :user_id, t("activerecord.attributes.shift.user_id", :default => "User"), :class => :label
    = f.select :user_id, User.selection_by_admin(current_admin.id), { :include_blank => true }
  .group
    = f.label :shiftdate, t("activerecord.attributes.shift.date", :default => t("activerecord.shift.date", :default => "Date")), :class => :label
    = f.date_select :shiftdate, :end_year => Time.now.year+1, :start_year => Time.now.year - 1
  .group
    = f.label :number, t("activerecord.attributes.shift.number", :default => "Number"), :class => :label
    = f.text_field :number, :class => 'text_field'
  .group.navform.wat-cf
    %button.button{:type => "submit"}
      = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
      = t("web-app-theme.save", :default => "Save")
    %span.text_button_padding= t("web-app-theme.or", :default => "or")
    %a.button.close{:href => '#'}
      = image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")
      = t("web-app-theme.cancel", :default => "Cancel")
