.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_departments_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_department_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      Department
    .inner
      = render "shared/form_errors", :object => @department
      = form_for :department, :url => admin_departments_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
