.group
  = f.label :name, t("activerecord.attributes.department.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
.group
  = f.label :has_identifier, t("activerecord.attributes.department.has_identifier", :default => "Has identifier"), :class => :label
  = f.check_box :has_identifier, :class => 'check_box'
  %span.description check this box if members of the department have unique identifiers/numbers
.group
  = f.label :has_t_shirt, t("activerecord.attributes.department.has_t_shirt", :default => "Has T-shirts"), :class => :label
  = f.check_box :has_t_shirt, :class => 'check_box'
  %span.description check this box if the department offers T-Shirts
.group.navform.wat-cf{:id => "check_list"}
  = f.label :permissions, t("activerecord.attributes.admin.permissions", :default => "Assigned Accounts"), :class => :label
  = link_to t("web-app-theme.check_all", :default => "Check All"), "#", :id => "check_all"
  |
  = link_to t("web-app-theme.uncheck_all", :default => "Uncheck All"), "#", :id => "uncheck_all"
  %br
  %br
  - Permission.in_columns.each do |col|
    %div{:style => "width:300px;float:left"}
      - col.each do |item|
        %div{:style => "width:300px;float:left"}
          = check_box_tag "permissions[]", "#{item.id}", @department.permissions.include?(item)
          = item.name

.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}") + t("web-app-theme.cancel", :default => "Cancel"), admin_departments_path, :class => "button"
