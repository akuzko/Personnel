.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_schedule_statuses_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_schedule_status_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_schedule_status_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Schedule Status
    .inner
      = render "shared/form_errors", :object => @status
      = form_for @status, :url => admin_schedule_status_path(@status), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
